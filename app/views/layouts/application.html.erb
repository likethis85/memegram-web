<!DOCTYPE html>
<html>
<head>
  <title>Memegram</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <% if flash[:notice] %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if flash[:alert] %>
  <p class="alert"><%= alert %></p>
  <% end %>

<%= yield %>

</body>
</html>
