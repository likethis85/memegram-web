<!DOCTYPE html>
<html lang="en">
<head>
  <%= meta_tags yield(:meta_tags) %>
  <%= title_tag yield(:page_title) %>
  <%= stylesheet_link_tag('application') %>
  <%= stylesheet_tags %>
</head>
<body>
  <div id="site-header">
    <%= header_logo %>
    <div class="download">
      <%= link_to "Download on the App Store", appstore_url %>
